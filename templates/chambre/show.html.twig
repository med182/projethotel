    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ chambre.titre }}</td>
            </tr>
            <tr>
                <th>DescriptionCourte</th>
                <td>{{ chambre.descriptionCourte }}</td>
            </tr>
            <tr>
                <th>DescriptionLongue</th>
                <td>{{ chambre.descriptionLongue }}</td>
            </tr>
            <tr>
